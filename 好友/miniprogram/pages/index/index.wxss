/* pages/index/index.wxss */
.index{
  margin-top: 100rpx;
}
.index-swiper {
  height: 350rpx;
}
.index-swiper image{
  width: 100%;
}
.index-tab {
  display: flex;
  margin-top: 10rpx;
  font-size: 30rpx;
}
.index-tab view {
  flex: 1;
  text-align: center;
  padding-bottom: 10rpx;
}
.index-tab view.active {
  border-bottom: 1rpx solid red;
  color: red;
}
.index-list {
  display: flex;
  flex-wrap: wrap;
}
.index-list-item {
  width: 50%;
  margin: 10rpx 0;
}
.index-list-item image {
  width: 90%;
  height: 250rpx;
  margin: 0 auto;
  display: block;
  border-radius: 5rpx;
}
.index-list-text {
  display: flex;
  justify-content: space-between;
  margin: 0 auto;
  width: 90%;
}