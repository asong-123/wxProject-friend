/* components/search/search.wxss */
.container {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 90rpx;
  z-index:999;
  overflow: hidden;
}
.search {
  display: flex;
  align-items: center;
  margin: 20rpx;
}
.containerFocus{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index:999;
  overflow: hidden;
  background: #ccc;
}
.search-text {
  display: flex;
  flex:1;
  align-items: center;
  border: 1px solid #b4b5b6;
  border-radius: 10rpx;
  height: 60rpx;
  background: white;
}
.search-text .iconfont {
  margin: 0 10rpx;
}
.search-text input{
  flex:1
}
.search-cancel {
  margin: 0 10rpx;
}
.search-history{
  display: flex;
  justify-content: space-between;
  margin: 20rpx;
}
.search-history-btn text {
  border: 1px solid #b4b5b6;
  background-color: white;
  border-radius: 20rpx;
  margin: 10rpx 20rpx ;
  padding:10rpx
}
.searchLlist-item{
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  line-height: 50rpx;
  border-bottom: 1px solid #b3b4b5;
  padding: 10rpx;
  margin-top: 20rpx;
}
.searchLlist-item view{
  display: flex;
  align-items: center;
}
.searchLlist-item image{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
}
.searchLlist-item text{
  margin-left: 10rpx;
}